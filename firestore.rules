rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userId} {
      allow read;
      allow create, update, delete: if request.auth != null && request.auth.uid == userId;
    }
    
    match /{document=**} {
      allow read;
      allow write, create, update, delete: if true
    }
  }
}